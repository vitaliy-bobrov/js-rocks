{
  "name": "js-rocks",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "prettier": "prettier --write \"**/*.{js,json,scss,md,ts,html,component.html}\"",
    "start": "ng serve",
    "build": "ng build",
    "test": "jest",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "deploy": "ng deploy",
    "pwa-asset": "pwa-asset-generator -c -m ./src/manifest.webmanifest -i ./src/index.html -q 90 -b '#303030' logo.png ./src/assets/icon",
    "test:watch": "jest --watch"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.2.12",
    "@angular/cdk": "~8.2.3",
    "@angular/common": "~8.2.12",
    "@angular/compiler": "~8.2.12",
    "@angular/core": "~8.2.12",
    "@angular/fire": "^5.2.1",
    "@angular/forms": "~8.2.12",
    "@angular/material": "^8.2.3",
    "@angular/platform-browser": "~8.2.12",
    "@angular/platform-browser-dynamic": "~8.2.12",
    "@angular/pwa": "^0.803.15",
    "@angular/router": "~8.2.12",
    "@angular/service-worker": "~8.2.12",
    "core-js": "3.2.1",
    "firebase": "^7.2.2",
    "hammerjs": "^2.0.8",
    "nanoid": "^2.1.6",
    "rxjs": "~6.5.3",
    "standardized-audio-context": "^22.0.2",
    "tslib": "^1.9.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.803.15",
    "@angular-devkit/build-angular": "0.803.15",
    "@angular/cli": "~8.3.15",
    "@angular/compiler-cli": "~8.2.12",
    "@angular/language-service": "~8.2.12",
    "@types/jest": "24.0.20",
    "@types/nanoid": "^2.1.0",
    "@types/node": "~12.11.7",
    "codelyzer": "^5.2.0",
    "firebase-tools": "^7.6.1",
    "fuzzy": "^0.1.3",
    "husky": "3.0.9",
    "inquirer": "^7.0.0",
    "inquirer-autocomplete-prompt": "^1.0.1",
    "jest": "24.9.0",
    "jest-preset-angular": "7.1.1",
    "lint-staged": "9.4.2",
    "prettier": "1.18.2",
    "protractor": "~5.4.0",
    "ts-node": "~8.4.1",
    "tslint": "~5.20.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.5.3"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "roots": [
      "src"
    ],
    "transform": {
      "^.+\\.(ts|js|html)$": "ts-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/setup-jest.ts"
    ],
    "moduleNameMapper": {
      "@audio/(.*)": "<rootDir>/src/app/audio/$1",
      "@shared/(.*)": "<rootDir>/src/app/shared/$1"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/src/tsconfig.spec.json",
        "stringifyContentPathRegex": "\\.html$",
        "astTransformers": [
          "jest-preset-angular/InlineHtmlStripStylesTransformer.js"
        ]
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,less,md,ts,html,component.html}": [
      "prettier --write",
      "git add"
    ]
  }
}
